# Database - Neon PostgreSQL (Cloud)
DATABASE_URL="postgresql://username:password@your-db-host.neon.tech/dbname?sslmode=require"

# Oracle Cloud Configuration
# Generative AI is ENABLED - will use Oracle Generative AI instead of Claude
OCI_GENERATIVE_AI_ENABLED=true

# Your Oracle Cloud Credentials
OCI_TENANCY_OCID="ocid1.tenancy.oc1..your-tenancy-ocid"
OCI_USER_OCID="ocid1.user.oc1..your-user-ocid"
OCI_FINGERPRINT="xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx"
OCI_PRIVATE_KEY_PATH="./oracle_privateKey.pem"
OCI_REGION="us-ashburn-1"

# Compartment (correct compartment for GenAI)
OCI_COMPARTMENT_OCID="ocid1.compartment.oc1..your-compartment-ocid"

# Object Storage
OCI_OBJECT_STORAGE_NAMESPACE="your-namespace"

# Oracle Generative AI Service
# Using Cohere model (supported by current code implementation)
OCI_GENAI_MODEL="cohere.command-r-plus"

# Generative AI endpoint (using us-ashburn-1 region)
OCI_GENAI_ENDPOINT="https://inference.generativeai.us-ashburn-1.oci.oraclecloud.com"

# App Config
NEXT_PUBLIC_APP_URL="http://localhost:3000"
